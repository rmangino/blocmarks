<%= form_for topic do |f| %>
  <% if topic.errors.any? %>
    <div class="alert alert-danger">
      <h4>There are <%= pluralize(topic.errors.count, "error") %>.</h4>
      <ul>
        <% topic.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_group_tag(topic.errors[:title]) do %>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Enter a name for your Topic" %>
  <% end %>

  <%= f.submit "Update", class: 'btn btn-success' %>

<% end %>

<hr />

<%= link_to 'Back', 'javascript:history.go(-1);' %>